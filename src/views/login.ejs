<body>

    <main class="text-center form-signin w-100 m-auto shadow-lg p-3">
        <form action="/login" method="POST">
            <img class="mb-4" src="images/user.png" alt="" width="100">
            <h1 class="h3 mb-3 fw-normal">Iniciar Sesi√≥n</h1>

            <div class="form-floating">
                <input type="text" name="cliNombres" class="form-control mb-2" id="floatingInput"
                    placeholder="name@example.com">
                <label for="floatingInput">Nombre Usuario</label>
            </div>
            <div class="form-floating">
                <input type="text" name="cliIdentificacion" class="form-control mb-2" id="floatingInput"
                    placeholder="name@example.com">
                <label for="floatingInput">Documento Usuario</label>
            </div>
            <div class="form-floating">
                <input type="password" name="cliContrasena" class="form-control" id="floatingPassword"
                    placeholder="Password">
                <label for="floatingPassword">Password</label>
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
            <a class="w-100 btn btn-lg btn-primary mt-2 register" href="/registro">Registrarse</a>

        </form>
    </main>

    <%- include('../views/partials/footer.ejs') %>

    <script src=" //cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (alert) { %>
    <script>
        Swal.fire({
            title: '<%= title %>',
            text: " <%= html %> ",
            icon: 'warning',
            width: 400,
            showConfirmButton: '<%= showConfirmButton %> ',
            timer: <%= timer %> 
            }).then(() => {
                window.location = '/<%= ruta %> '
            })
    </script>
    <% } %>